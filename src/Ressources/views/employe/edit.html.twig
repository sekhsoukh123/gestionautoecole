{% extends 'base.html.twig' %}
   {% form_theme form 'bootstrap_4_layout.html.twig' %}
   {% trans_default_domain 'Employe' %}

   {% block title %}
   <title>Modifier</title>

   {% endblock %}
{% block content_header %}

<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 text-dark">Modifier</h1>

      </div><!-- /.col -->
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item active">Modifier</li>
        </ol>
      </div><!-- /.col -->
    </div><!-- /.row -->
  </div><!-- /.container-fluid -->
</div>

{% endblock %}

{% block content %}
{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

<div class="row">
         <div class="col-12">
           <div class="card">
             <div class="card-header">
               <h3 class="card-title">Modifier</h3>

               <div class="card-tools">
                 <div class="input-group input-group-sm" style="width: 150px;">
                   <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                   <div class="input-group-append">
                     <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                   </div>
                 </div>
               </div>
             </div>
             <!-- /.card-header -->
             <div class="card-body">
             <div class="col-md-12">
             {{ form_widget(form) }}

             </div>


             </div>
             <div class="card-footer">
             <button type="submit" class="btn btn-success">{{ 'actions.valider' | trans ({}, 'AppBundle') }}</button>
             <a href="{{ app.request.headers.get('referer') }}" class="btn btn-info">{{ 'actions.cancel' | trans  ({}, 'AppBundle')}}</a>
             <a href="{{ path('admin_candidat_index') }}" class="btn btn-warning pull-right">{{ 'actions.back_to_list' | trans  ({}, 'AppBundle') }}</a>

             </div>
             <!-- /.card-body -->
           </div>
           <!-- /.card -->
         </div>
       </div>
       {{ form_end(form, {'render_rest': false}) }}
       <!-- /.row -->
{% endblock %}
